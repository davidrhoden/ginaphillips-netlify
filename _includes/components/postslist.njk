<section>
	{% for post in postslist %}
		<article{% if post.url == url %} data-current="current item"{% endif %}>

			<a href="{{ post.url | url }}">
				{% if post.data.image %}
					<img src="{{ post.data.image }}" alt="{{ post.data.excerpt }}">
				{% endif %}
			</a>
			<h3>
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h3>
			{% if post.data.summary %}
				<p>
					{{ post.data.summary }}
				</p>
			{% endif %}
		</article>
	{% endfor %}
</section>
